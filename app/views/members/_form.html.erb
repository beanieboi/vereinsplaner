<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-12 col-lg-8">
      <% if @member.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            Folgende Fehler sind aufgetreten: <%= pluralize(@member.errors.count, "error") %>.
            <ul>
            <% @member.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= form_for(@member) do |f| %>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Mitgliedsnummer</label>
          <div class="col-sm-10 col-lg-6">
            <% if @member.new_record? %>
              <%= f.text_field :member_id, value: Member.next_member_id, class: "form-control" %>
            <% else %>
              <%= f.text_field :member_id, class: "form-control" %>
            <% end %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Vorname</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Nachname</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Geburtstag</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.date_field :date_of_birth, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Geschlecht</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.collection_select :gender, Gender.all, :id, :name, {}, {class: "custom-select"} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Stra√üe</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :street, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Hausnummer</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :street_number, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">PLZ</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Stadt</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Land</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.collection_select :country, Country.all, :name, :name, {}, {class: "custom-select"} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Email</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :contact_email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Telefon</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :contact_phone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Mitglied seit</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.date_field :membership_started_at, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Mitglied bis</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.date_field :membership_ended_at, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Mitgliedsbeitrag (Euro)</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :membership_fee_in_euro, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Mitgliedsart</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.collection_select :membership_type_id, MembershipType.active, :id, :name, {}, {class: "custom-select"} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Aufnahmeantrag</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.file_field :application_form, {class: "form-control", "aria-describedby": "inputGroupFileAddon01"} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Lastschrifteinzug</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.check_box :sepa_mandate, class: ".form-check" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-lg-4 col-form-label">Tags</label>
          <div class="col-sm-10 col-lg-6">
            <% Tag.where(object: 'Member').all.each do |tag| %>
              <% checked = member.tags.include?(tag.name) %>
              <label class="tag">
                <%= check_box_tag 'member[tags][]', tag.name, checked %><%= tag.name %>
                <div><%= tag.name %></div>
              </label>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Kommentar</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      <% end %>
    </div>
  </div>
</div>
