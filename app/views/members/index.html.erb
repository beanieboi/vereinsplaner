<div class="container">
  <% if @active_members.any? %>
  <div class="row">
    <div class="mt-4 px-3 pt-4 pb-5">
      <h2>aktive Mitglieder</h2><%= link_to("neues Mitglied", new_member_path) %> <%= mail_to(mail_list(@active_members), "E-Mail senden") %>
    </div>
  </div>
