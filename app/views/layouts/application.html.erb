<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="<%= asset_url 'favicon.png' %>">

    <title>Vereinsplaner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag :application %>
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="mainNav">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarToggler">
        <ul class="navbar-nav ml-auto">
          <% if logged_in? %>
            <li class="nav-item nav-link">
              <%= link_to 'Start', '/' %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to 'Dokumente', documents_path %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to 'Mitglieder', members_path %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to 'Zahlungen', payments_path %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to 'Statistiken', statistics_path %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to 'Profil', users_path %>
            </li>
            <li class="nav-item nav-link">
              <%= link_to('Abmelden', signout_url, method: :delete) %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <header class="bg-tfc-color text-white">
      <div class="container">
        <div class="row">
          <div class="tfc-subtitle">TFC Vereinsplaner</div>
        </div>
      </div>
    </header>

    <div class="main-content pb-5">
      <% flash.each do |key, value| %>
        <div class="container mt-4">
          <div class="alert alert-<%= key === "error" ? "alert" : "primary" %>"><%= value %></div>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; 1. TFC Leipzig 2019</p>
      </div>
    </footer>
  </body>
</html>
