<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="<%= asset_url 'favicon.png' %>">

    <title>Vereinsplaner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-white bg-white fixed-top" id="mainNav">
      <div class="container">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to 'Start', '/' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Dokumente', documents_path %>
          </li>
          <li class="nav-item">
            <%= link_to 'Mitglieder', members_path %>
          </li>
          <li class="nav-item">
            <%= link_to 'Zahlungen', payments_path %>
          </li>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Admin', rails_admin_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <header class="bg-tfc-color text-white">
      <div class="container">
        <div class="row">
          <div class="tfc-subtitle">TFC Vereinsplaner</div>
        </div>
      </div>
    </header>

    <div class="main-content pb-5">
      <% flash.each do |key, value| %>
        <div class="container mt-4">
          <div class="alert alert-<%= key === "error" ? "alert" : "primary" %>"><%= value %></div>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; 1. TFC Leipzig 2019</p>
      </div>
    </footer>
  </body>
</html>
