<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 col-lg-8">
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            Folgende Fehler sind aufgetreten: <%= pluralize(@user.errors.count, "error") %>.
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= form_for([:admin, @user]) do |f| %>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Nickname</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :nickname, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">E-Mail</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Admin</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.check_box :admin, class: ".form-check" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Neues Password</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Neues Password bestÃ¤tigen</label>
          <div class="col-sm-10 col-lg-6">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      <% end %>
    </div>
  </div>
</div>
