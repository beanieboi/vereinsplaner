<div class="container payment-new">
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8 group-top-gradient group-white mt-4 px-3 pt-4 pb-5">
      <h2>Passwort Ã¤ndern</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
      <div class="container">
        <div class="row justify-content-center">

          <div class="col-md-12 col-lg-8">
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <div class="alert alert-danger">
                  Folgende Fehler sind aufgetreten: <%= pluralize(@user.errors.count, "error") %>.
                  <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
            <%= form_for(@user) do |f| %>
              <div class="form-group row">
                <label for="member" class="col-sm-2 col-lg-4 col-form-label">Password</label>
                <div class="col-sm-10 col-lg-6">
                  <%= f.password_field :password, class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <label for="partner_name" class="col-sm-2 col-lg-4 col-form-label">Passwort wiederholen</label>
                <div class="col-sm-10 col-lg-6">
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
